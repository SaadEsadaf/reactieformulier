{% extends "base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/sonatacore/vendor/bootstrap/dist/css/bootstrap.min.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/newscore/css/custom.css') }}">
{% endblock %}

{% block body %}
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('news_core_post_index') }}">Online zicht</a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    {% if app.user %}
                        <li><a href="{{ path('sonata_admin_dashboard') }}">Dashboard</a></li>
                        <li><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
                    {% else %}
                        <li><a href="{{ path('fos_user_security_login') }}">Login</a></li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    <section class="post-content-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-9 col-md-9 col-sm-12">
                    {% block fos_user_content %}{% endblock %}
                    {% block section %}{% endblock %}
                </div>
                <div class="col-lg-3 col-md-3 col-sm-12">
                    {% block sidebar %}{% endblock %}
                </div>
            </div>
        </div>
    </section>

    <footer class="footer">
        <div class="container">

        </div>
    </footer>
{% endblock %}

{% block javascripts %}

    <script src="{{ asset('bundles/sonatacore/vendor/jquery/dist/jquery.js') }}"></script>
    <script src="{{ asset('bundles/sonatacore/vendor/bootstrap/dist/js/bootstrap.min.js') }}"></script>
{% endblock %}

